
if not options.include or not path.isdir(options.include):
  error('{}.include not a directory: "{}"'.format(__name__, options.include))
if not options.libpath or not path.isdir(options.libpath):
  error('{}.libpath not a directory: "{}"'.format(__name__, options.libpath))

__all__ = ['webp']
webp = Framework(
  include = [options.include],
  libpath = [options.libpath],
  libs = ['libwebp']
)
